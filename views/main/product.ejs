<% layout('layout') -%>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<img src="<%= product.image %>" alt="">
		</div>
		<div class="col-md-4">
			
		</div>
		 <div class="col-md-4">
			<h3><%= product.name %></h3>
			<p>P <%= product.price %></p>

			<form action="" method="post">
				<div class="btn-group" role="group" aria-label="...">
				<input type="hidden" name="quantity" id="quantity" value="1">
					<button type="submit" id="minus" class="btn btn-danger">-</button>
					<button type="submit" id="total" class="btn btn-success">1</button>
					<button type="submit" id="plus" class="btn btn-danger">+</button>
				</div>
				<div class="form-group"> 
					<input type="hidden" name="product_id" id="quantity" value="<%= product._id %>">
					<input type="hidden" name="priceHidden" id="priceHidden" class="form-control" value="<%= product.price %>">
					<b>Product Name:</b>
					<input type="text" name="item" class="form-control" value="<%= product.name %>" readonly>
					<b>Total (p):</b> <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>" readonly>
				</div>
				<% if (user) {%>
					<button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
				<%} else {%>
					<a href="/signup" class="btn btn-warning btn-lg">Signup to begin buying</a>
				<%}%>
			</form>
		</div> 
	</div>
</div>